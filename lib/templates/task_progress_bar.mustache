{{!
    @template core/task_progress_bar

    Template for task progress bar

    Example context (json):
    {
        "percentage": "75,
        "timeleft": "1 hour, 30 mins, 45 seconds",
    }
}}

<div id="task-progress-{{id}}" class="task-progress progress" attr-id="{{id}}">
  <div class="progress-bar progress-bar-striped" role="progressbar" style="width:{{percentage}}%;" aria-valuenow="{{percentage}}" aria-valuemin="0" aria-valuemax="100">{{percentage}}%</div>
</div>
<span><small id="task-estimated-{{id}}">{{#str}} estimatedtimeleft, tool_task, {{timeleft}} {{/str}}</small></span>